
 {{> header outside=outside}}
  <main>
    <div class="container">
      <div class="row">
        <div class="col-lg-8">
          <section class="my-3 m-game m-game--preparing-game">
            <header id="gameTopPannel" class="d-none">
              <h3 class="m-game__title"><strong></strong></h3>
              <div class="m-game__info d-none">Has conquistado: <span id="conqueredCellsInfo">0</span> / <span id="cellsToWinInfo">0</span></div>
              <div id="roundTitle" class="m-game__round-title d-none">Round <span></span></div>
            </header>
            <div id="roomMessage" class="m-game-message p-2 d-none">
            </div>
            <div id="roomConnectedMessage" class="m-game-messageConnected">
              <h3 class="m-game-messageConnected__title"><strong>Arrastra tu jugador a una sala</strong></h3>
              <p id="roomConnectedMessageSubtitle" class="d-none"><strong>Jugadores conectados a la sala <span id="connectedRoom"></span></strong></p>
              <ul></ul>
            </div>
            <div id="playButton" class="m-game-playButton"></div>
            <div id="waittingTurn" class="m-game-waitting-message d-none"></div>
            <canvas id="game"></canvas>
            <div id="roomPannelInfo" class="m-game-pannelInfo w-100">
            </div>
          </section>
        </div>
        <div class="col-lg-4">
          <section class="my-3">
            <div class="m-user-item" id="my-user-box">
                <div class="m-user-item__image">
                  <div class="image">
                    <div class="a-avatar drag-item" id="avatarMobile" draggable='true' data-id="" data-color="" data-avatar=""><i class="fas fa-user"></i></div>
                  </div>
                  <p class="small text-center">Please drag<br>to room</p>
                </div>
                <div class="m-user-item__content">
                  <h3 class="m-user-item__name">USER NAME</h3>
                  <label>FAV ROOM</label>
                  <h4 class="m-user-item__room">ROOM 1</h4>
                </div>
              </div>
          </section>
          <section class="my-3">
            <div class="o-rooms-container">
              <div class="row d-flex flex-wrap justify-content-space-between">
                {{#each boxRooms}}
                  <div class="col-6 mb-3">
                    <article id="{{{id}}}" class="m-room-drop-item" style="background-color: {{{color}}}">
                      <div class="m-room-drop-item__header">
                        <h3 class="m-room-drop-item__name">ROOM 1</h3>
                      </div>
                      <div class="m-room-drop-item__image"></div>
                      <div class="m-room-drop-item__total">
                        <p><span id="roomTotalPlayers" class="total">0</span>J</p>
                      </div>
                    </article>
                  </div>
                {{/each}}
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
  </main>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  <script src="../bundle.js" type="text/javascript"></script>

  <script>
  
    const dashBoardInitData = {
      boxRooms: [
              {{#each boxRooms}}
                {id: "{{{id}}}"},
              {{/each}}  
      ]
    }
    const dasboard = new Conquer.Dashboard(dashBoardInitData);
    dasboard.init()

  </script>